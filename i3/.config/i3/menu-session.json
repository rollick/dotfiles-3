{
	"i3": {
		"reconfigure": "i3-msg reload",
		"restart": "i3-msg restart"
	},
	"lock": "i3lock-color",
	"logout": "i3-msg exit",

	"hibernate": {
		"with lock": "sh -c 'systemctl hibernate; i3lock-color'",
		"without lock": "systemctl hibernate"
	},

	"suspend": {
		"with lock": "sh -c 'systemctl suspend; i3lock-color'",
		"without lock": "systemctl suspend"
	},

	"reboot": "systemctl reboot",
	"shutdown": "systemctl poweroff"
}
