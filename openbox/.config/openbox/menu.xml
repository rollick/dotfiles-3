<!-- Static menus -->
<menu id="apps-graphics-menu" label="Graphics">
	<item label="Gimp">
		<action name="Execute">
			<command>gimp</command>
			<startupnotify>
				<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="LibreOffice Draw">
		<action name="Execute">
			<command>libreoffice --draw</command>
		</action>
	</item>
	<item label="Simple Scan">
