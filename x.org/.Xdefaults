!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! General settings
URxvt.geometry: 90x30
URxvt.perl-ext-common: default,clipboard,fullscreen,matcher,url-select,vtwheel
URxvt.iconFile: /usr/share/icons/Numix-Circle/scalable/apps/utilities_terminal.svg

! Cursor settings
URxvt.cursorBlink: true
URxvt.cursorUnderline: true

! Font settings
URxvt.font: xft:Droid Sans Mono:size=10

! Scrollbar settings
URxvt.scrollBar: false

! Scrollback buffer in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Make URLs clickable
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg8
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true

! Keybindings
URxvt.keysym.C-S-c: perl:clipboard:copy
URxvt.keysym.C-S-v: perl:clipboard:paste
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.keysym.M-u: perl:url-select:select_next

! Tango colortheme
URxvt.background: #000000
URxvt.foreground: #ffffff
URxvt.color0: #2E2E34343636
