<menu id="system-openbox-menu" label="Openbox">
	<item label="Edit Openbox configuration">
		<action name="Execute">
			<command>gvim ~/.config/openbox/rc.xml</command>
			<startupnotify>
				<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="Edit Openbox environment">
		<action name="Execute">
			<command>gvim ~/.config/openbox/environment</command>
			<startupnotify>
				<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="Edit Openbox menu">
		<action name="Execute">
			<command>gvim ~/.config/openbox/menu.xml</command>
			<startupnotify>
				<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<separator />
	<item label="Reconfigure Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to reconfigure Openbox?</prompt>
			<command>openbox --reconfigure</command>
		</action>
	</item>
	<item label="Restart Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to restart Openbox?</prompt>
			<command>openbox --restart</command>
		</action>
	</item>
</menu>

<menu id="system-session-menu" label="Session">
	<item label="Lock screen">
		<action name="Execute">
			<prompt>Are you sure you want to lock the screen?</prompt>
			<command>i3lock -e -c 000000</command>
		</action>
	</item>
	<item label="Log Out">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>
	<separator />
	<item label="Hibernate">
		<action name="Execute">
			<prompt>Are you sure you want to hibernate?</prompt>
			<command>systemctl hibernate</command>
		</action>
	</item>
	<item label="Suspend">
		<action name="Execute">
			<prompt>Are you sure you want to suspend?</prompt>
			<command>systemctl suspend</command>
		</action>
	</item>
	<separator />
	<item label="Reboot">
		<action name="Execute">
			<prompt>Are you sure you want to reboot?</prompt>
			<command>systemctl reboot</command>
		</action>
	</item>
	<item label="Shutdown">
		<action name="Execute">
			<prompt>Are you sure you want to shutdown?</prompt>
			<command>systemctl poweroff</command>
		</action>
	</item>
</menu>

