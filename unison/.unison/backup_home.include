####################
# Set ~/ as root
####################
root =
####################
# Options
####################
confirmbigdel = false
log = false
prefer = newer

####################
# Always exclude Unison cache files
####################
ignore = Path .unison/*
ignorenot = Path .unison/*.prf
ignorenot = Path .unison/*.include

####################
# Always exclude temporary and backup files
####################
ignore = Name *~
ignore = Name .*~
ignore = Name *.bak
ignore = Name *.o
ignore = Name *.pyc
ignore = Name *.tmp
ignore = Name *.swp

####################
# Exclude the following paths
####################
ignore = Path Documents/Code/*/pkgbuilds/*/pkg
ignore = Path Documents/Code/*/pkgbuilds/*/src
ignore = Path Documents/Code/*/pkgbuilds/*/*.pkg.tar*
ignore = Path Documents/Code/*/pkgbuilds/*/*.src.tar*
ignore = Path .config/pulse
ignore = Path .config/transmission/resume
ignore = Path .config/transmission/torrents
ignore = Path .local/share/moc
ignore = Path .local/share/Trash
ignore = Path .local/share/icc/*
ignore = Path .local/share/gvfs-metadata
ignore = Path .local/share/numlock_on
ignore = Path .local/share/recently-used.xbel
ignore = Path .vim/.recently-used

####################
# Include folders
####################
path = Desktop
path = Documents
path = Music
path = PDF
path = Pictures
path = Public
path = Software
path = Temp
path = Templates
path = Videos
path = .config
