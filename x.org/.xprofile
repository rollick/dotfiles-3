#!/bin/bash

# Setup environment for X sessions

# Fix GTK2+
if [[ -f "${HOME}/.gtkrc-2.0" ]]; then
	export GTK2_RC_FILES="${HOME}/.gtkrc-2.0"
fi

# Remove missing accessibility bus messages
export NO_AT_BRIDGE=1

# Set terminal for i3
if which urxvtcd >/dev/null 2>&1; then
	export RXVT_SOCKET="${XDG_CACHE_HOME}/urxvtd-$(hostname)"
	export TERMINAL="urxvtcd"
else
	export TERMINAL="urxvt"
fi
export TERMCMD="${TERMINAL}"

# Fix libreoffice theme
if which libreoffice >/dev/null 2>&1; then
	export SAL_USE_VCLPLUGIN="gtk"
fi
