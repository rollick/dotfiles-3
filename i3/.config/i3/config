##############################
# Autostart
##############################
exec_always --no-startup-id feh --no-fehbg --bg-fill ~/.local/share/wallpaper
exec --no-startup-id xcompmgr
exec --no-startup-id udiskie --quiet --no-automount --no-file-manager --no-notify --no-tray
exec --no-startup-id i3-sensible-terminal -name cmus -e cmus

##############################
# Appearance
##############################
set $focused_bg #5294e2
set $focused_fg #f5f6f7
set $indicator_off #5294e2
set $indicator_on #f5f6f7
set $separator_fg #afb8c5
set $unfocused_bg #2f343f
set $unfocused_fg #f5f6f7
set $urgent_bg #cc575d
set $urgent_fg #5294e2

# Set font
font pango:FontAwesome, Droid Sans Bold 10

# Set colors for window decorations
# class                 border        background    foreground    indicator
client.focused          $focused_bg   $focused_bg   $focused_fg   $indicator_on
client.focused_inactive $unfocused_bg $unfocused_bg $unfocused_fg $indicator_off
client.unfocused        $unfocused_bg $unfocused_bg $unfocused_fg $indicator_off
client.urgent           $urgent_bg    $urgent_bg    $urgent_fg    $urgent_bg

# i3bar
bar {
	font pango:FontAwesome, Droid Sans 10
	position top
	separator_symbol "|"
	status_command venv_run i3pystatus-bin i3pystatus-bin
	tray_output primary
	colors {
		background $unfocused_bg
		separator $separator_fg
		statusline $unfocused_fg
		# class            border        background    foreground    indicator
		active_workspace   $separator_fg $separator_fg $unfocused_fg $focused_bg
		focused_workspace  $focused_bg   $focused_bg   $focused_fg   $unfocused_bg
		inactive_workspace $unfocused_bg $unfocused_bg $unfocused_fg $focused_bg
		urgent_workspace   $urgent_bg    $urgent_bg    $unfocused_fg $focused_bg
	}

	# Disable mouse events
	bindsym button1 nop
	bindsym button2 nop
	bindsym button3 nop
	bindsym button4 nop
	bindsym button5 nop
}

##############################
# General settings
##############################
new_float 1pixel
new_window 1pixel

##############################
# Workspaces
##############################
set $monitor1 HDMI-1
set $monitor2 VGA-1

workspace_auto_back_and_forth yes

workspace 1 output $monitor1
workspace 2 output $monitor2
workspace 3 output $monitor1
workspace 4 output $monitor2
workspace 5 output $monitor1
workspace 6 output $monitor2
workspace 7 output $monitor1
workspace 8 output $monitor2
workspace 9 output $monitor1

##############################
# Window rules
##############################
# The following rule is a hack for MP3Diags and to preempt the same problem
# with other programs.
for_window [window_type="splash"] border none

for_window [class="Avahi-*"] floating enable
for_window [class="Firefox" title="^ProfileSwitcher$"] floating enable
for_window [class="Firefox" window_role="^(?!browser$)"] floating enable
for_window [class="Gvbam"] floating enable
for_window [class="MP3Diags" window_type="normal"] floating disable
for_window [class="Nestopia"] floating enable
for_window [class="Octave.*" title="^Figure .*"] floating enable
for_window [class="Snes9x.*"] floating enable
for_window [instance="calc"] floating enable
for_window [instance="cmus"] move window to scratchpad
for_window [title="^Page Unresponsive$"] floating enable
for_window [title="^Task Manager - Chromium$"] floating enable

##############################
# Keybindings
##############################
# $mod -- Perform action on parent
# $mod+Shift -- Perform action on a window/container
# $mod+Ctrl -- Run command

# Set modifier
set $mod Mod4
floating_modifier $mod+Shift

# Modes
mode "resize" {
	bindsym Down resize shrink height 10 px or 10 ppt
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym Up resize grow height 10 px or 10 ppt

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Change focus
bindsym $mod+Down focus down
bindsym $mod+Left focus left
bindsym $mod+Right focus right
bindsym $mod+Up focus up

# Move container
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up

# Focus container
bindsym $mod+c focus child
bindsym $mod+p focus parent

# Split in (h)orizontal or (v)ertical orientation
bindsym $mod+h split h
bindsym $mod+v split v

# Kill currently focused container
bindsym $mod+Shift+q kill

# Enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# Resize container
bindsym $mod+Shift+r mode resize

# Floating container
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Switch to workspace
bindsym $mod+0 scratchpad show
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+Tab workspace back_and_forth

bindsym $mod+KP_0 scratchpad show
bindsym $mod+KP_1 workspace 1
bindsym $mod+KP_2 workspace 2
bindsym $mod+KP_3 workspace 3
bindsym $mod+KP_4 workspace 4
bindsym $mod+KP_5 workspace 5
bindsym $mod+KP_6 workspace 6
bindsym $mod+KP_7 workspace 7
bindsym $mod+KP_8 workspace 8
bindsym $mod+KP_9 workspace 9
bindsym $mod+KP_Add workspace back_and_forth

# Show specific scratchpad windows
bindsym $mod+m [instance="cmus"] scratchpad show

# Move container to workspace
bindsym $mod+Shift+0 move scratchpad
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+Tab move container to workspace back_and_forth

bindsym $mod+Shift+KP_0 move scratchpad
bindsym $mod+Shift+KP_1 move container to workspace 1
bindsym $mod+Shift+KP_2 move container to workspace 2
bindsym $mod+Shift+KP_3 move container to workspace 3
bindsym $mod+Shift+KP_4 move container to workspace 4
bindsym $mod+Shift+KP_5 move container to workspace 5
bindsym $mod+Shift+KP_6 move container to workspace 6
bindsym $mod+Shift+KP_7 move container to workspace 7
bindsym $mod+Shift+KP_8 move container to workspace 8
bindsym $mod+Shift+KP_9 move container to workspace 9
bindsym $mod+Shift+KP_Add move container to workspace back_and_forth

# Start applications
bindsym $mod+Ctrl+Return exec i3-sensible-terminal
bindsym $mod+Ctrl+d exec --no-startup-id dmenu_run
bindsym Menu exec --no-startup-id dmenu_run
bindsym XF86AudioLowerVolume exec --no-startup-id amixer --quiet sset Headphone 5%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer --quiet sset Headphone toggle
bindsym XF86AudioPlay exec --no-startup-id cmus-remote --pause
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer --quiet sset Headphone 5%+ unmute
bindsym XF86Calculator exec --no-startup-id i3-sensible-terminal -name calc -e octave-cli --silent
bindsym XF86HomePage exec firefox
bindsym XF86Mail exec firefox https://www.gmail.com/

# Session control
bindsym $mod+Ctrl+l exec --no-startup-id i3lock_wrapper --dpms
bindsym $mod+Ctrl+s exec --no-startup-id dmenu-select --prompt=session ~/.config/i3/menu-session.json
bindsym XF86Sleep exec --no-startup-id dmenu-select --prompt=session ~/.config/i3/menu-session.json
