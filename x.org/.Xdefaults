! Xft
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! General settings
URxvt.geometry: 90x30
URxvt.perl-ext-common: default,clipboard,fullscreen,matcher,url-select,vtwheel
URxvt.iconFile: /usr/share/icons/elementary-xfce/apps/128/terminal.svg

! Cursor settings
URxvt.cursorBlink: true
URxvt.cursorUnderline: true

! Font settings
URxvt.font: xft:Droid Sans Mono:size=10

! Scrollbar settings
URxvt.scrollBar: false

! Scrollback buffer in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Make URLs clickable
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg8
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true

! Keybindings
URxvt.keysym.C-c: perl:clipboard:copy
URxvt.keysym.C-v: perl:clipboard:paste
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.keysym.M-u: perl:url-select:select_next

