#!/bin/bash
if [[ "${1}" == '--help' ]]; then
	echo "Usage: $(basename $0) [OPTION] virtual_environment script"
	echo "Wrapper for running a python script inside a virtual environment."
	echo
	echo "Options:"
	echo "    --help     display this help and exit"

	exit
fi

source /usr/bin/virtualenvwrapper.sh

workon "${1}"
shift
"${@}"
