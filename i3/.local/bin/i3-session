DMENU="dmenu -i"
MAIN_ITEMS="$(echo -e "i3 \u2192")
logout
suspend
hibernate
reboot
shutdown"

I3_ITEMS="reconfigure
restart"

# Parse commandline arguments
if [[ -n ${1} ]]; then
	if [[ "$(cut -d= -f1 <<< "${1}")" == "--dmenu" ]]; then
		DMENU="$(cut -d= -f2 <<< "${1}")"
	fi

	shift
fi

# Show menus
if [[ -z ${1} ]]; then
	choice=$(${DMENU} -p "session:" <<< "${MAIN_ITEMS}")
	case ${choice} in
		"i3 "* )      "${0}" --dmenu="${DMENU}" i3;;
		"logout" )    i3-msg exit;;
		"suspend" )   i3lock -c 10316d && systemctl suspend;;
		"hibernate" ) i3lock -c 10316d && systemctl hibernate;;
		"reboot" )    systemctl reboot;;
		"shutdown" )  systemctl poweroff;;
	esac
elif [[ "${1}" == "i3" ]]; then
	choice=$(${DMENU} -p "session - i3:" <<< "${I3_ITEMS}")
	case ${choice} in
		"reconfigure")  i3-msg reload;;
		"restart") i3-msg restart;;
		* ) ${0} --dmenu="${DMENU}";;
	esac
fi
