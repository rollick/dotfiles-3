! Xft
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! General settings
URxvt.perl-ext-common: default,clipboard,matcher,url-select

! Cursor settings
URxvt.cursorBlink: true
URxvt.cursorUnderline: true

! Font settings
URxvt.font: xft:Droid Sans Mono:size=9:antialias:true

! Scrollbar settings
URxvt.scrollBar: false

! Scrollback buffer in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Make URLs clickable
URxvt.url-launcher: firefox
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg8
URxvt.url-select.launcher: firefox
URxvt.url-select.underline: true

! Keybindings
URxvt.keysym.C-S-c: perl:clipboard:copy
URxvt.keysym.C-S-v: perl:clipboard:paste
URxvt.keysym.M-u: perl:url-select:select_next

! Tango colortheme
URxvt.background: #000000
URxvt.foreground: #ffffff
URxvt.color0: #2e2e34343636
