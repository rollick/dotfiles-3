[alias]
	br = branch
	cdpull = "!update-git-repos $1"
	ci = commit
	cia = commit --all
	co = checkout
	current = "!git rev-parse --abbrev-ref HEAD"
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	incoming = "!git log ..origin/$(git current)"
	origin = config --get remote.origin.url
	outgoing = "!git log origin/$(git current).."
	publish = "!git push origin $(git current)"
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	stat = status

	# Use fzf to select a commit
	fpd = "!BRANCH=$(git fselect-branch) && git push-delete origin ${BRANCH/remotes\\/origin\\//}"
	frbi = "!HASH=$(git fselect-commit) && git rebase --interactive $(echo ${HASH}| awk '{print $1}')^"
	frevert = "!HASH=$(git fselect-commit) && git revert $(echo ${HASH}| awk '{print $1}')^"
	fselect-branch = "!git branch -a |grep -v HEAD |cut -d'*' -f2| awk '{print $1}' |fzf"
	fselect-commit = "!git log --oneline |fzf"
	fshow = "!HASH=$(git fselect-commit) && git show --show-signature $(echo ${HASH}| awk '{print $1}')^"
[commit]
	gpgsign = true
[core]
	pager =
[github]
	user = rscholer
[merge]
	tool = nvim -d
[push]
	default = simple
[tig]
	line-graphics = utf-8
	vertical-split = 0
