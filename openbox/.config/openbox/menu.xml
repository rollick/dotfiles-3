<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- Pipe menus -->
<menu id="pipe-moc-menu" label="Music On Console" execute="ob-mocp-pipe" />
<menu id="pipe-alsa-menu" label="Volume" execute="ob-alsa-pipe.py" />

<!-- Static menus -->
<menu id="apps-graphics-menu" label="Graphics">
	<item label="Gimp">
		<action name="Execute">
			<command>gimp</command>
			<startupnotify>
				<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="LibreOffice Draw">
		<action name="Execute">
			<command>libreoffice --draw</command>
		</action>
	</item>
</menu>

<menu id="apps-multimedia-menu" label="Multimedia">
	<item label="easymp3gain">
		<action name="Execute">
			<command>easymp3gain</command>
		</action>
	</item>
	<item label="MP3Diags">
		<action name="Execute">
			<command>MP3Diags</command>
		</action>
	</item>
	<item label="Music On Console">
		<action name="Execute">
			<command>urxvtc -e mocp</command>
		</action>
	</item>
</menu>

<menu id="apps-net-menu" label="Internet">
	<item label="Firefox">
		<action name="Execute">
			<command>firefox</command>
      			<startupnotify>
        			<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="Gmail">
		<action name="Execute">
			<command>firefox https://www.gmail.com</command>
      			<startupnotify>
        			<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
	<item label="Unison">
		<action name="Execute">
			<command>unison-gtk2</command>
      			<startupnotify>
        			<enabled>yes</enabled>
			</startupnotify>
		</action>
	</item>
</menu>

<menu id="apps-office-menu" label="Office">
	<item label="LibreOffice Calc">
		<action name="Execute">
			<command>libreoffice --calc</command>
		</action>
	</item>
	<item label="LibreOffice Impress">
		<action name="Execute">
			<command>libreoffice --impress</command>
		</action>
	</item>
	<item label="LibreOffice Math">
		<action name="Execute">
			<command>libreoffice --math</command>
		</action>
	</item>
	<item label="LibreOffice Writer">
		<action name="Execute">
			<command>libreoffice --writer</command>
		</action>
	</item>
</menu>

<menu id="apps-system-menu" label="System">
	<item label="Editor">
		<action name="Execute">
			<command>urxvtc -e vim</command>
		</action>
	</item>
	<item label="System monitor">
		<action name="Execute">
			<command>urxvtc -e htop</command>
		</action>
	</item>
	<item label="Terminal">
		<action name="Execute">
			<command>urxvtc</command>
		</action>
	</item>
</menu>

<menu id="system-administration-menu" label="Administration">
	<item label="Manage Cups Printers">
		<action name="Execute">
			<command>firefox http://localhost:631/</command>
			<startupnotify>
				<enabled>no</enabled>
				<icon>cups</icon>
			</startupnotify>
		</action>
	</item>
	<menu id="pipe-alsa-menu" />
</menu>

<menu id="system-openbox-menu" label="Openbox">
	<item label="Edit autostart">
		<action name="Execute">
			<command>urxvtc -e vim ~/.config/openbox/autostart</command>
		</action>
	</item>
	<item label="Edit Openbox configuration">
		<action name="Execute">
			<command>urxvtc -e vim ~/.config/openbox/rc.xml</command>
		</action>
	</item>
	<item label="Edit Openbox environment">
		<action name="Execute">
			<command>urxvtc -e vim ~/.config/openbox/environment</command>
		</action>
	</item>
	<item label="Edit Openbox menu">
		<action name="Execute">
			<command>urxvtc -e vim ~/.config/openbox/menu.xml</command>
		</action>
	</item>
	<separator />
	<item label="Reconfigure Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to reconfigure Openbox?</prompt>
			<command>openbox --reconfigure</command>
		</action>
	</item>
	<item label="Restart Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to restart Openbox?</prompt>
			<command>openbox --restart</command>
		</action>
	</item>
</menu>

<menu id="system-session-menu" label="Session">
	<item label="Lock screen">
		<action name="Execute">
			<prompt>Are you sure you want to lock the screen?</prompt>
			<command>light-locker-command --lock</command>
		</action>
	</item>
	<item label="Log Out">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>
	<separator />
	<item label="Hibernate">
		<action name="Execute">
			<prompt>Are you sure you want to hibernate?</prompt>
			<command>systemctl hibernate</command>
		</action>
	</item>
	<item label="Suspend">
		<action name="Execute">
			<prompt>Are you sure you want to suspend?</prompt>
			<command>systemctl suspend</command>
		</action>
	</item>
	<separator />
	<item label="Reboot">
		<action name="Execute">
			<prompt>Are you sure you want to reboot?</prompt>
			<command>systemctl reboot</command>
		</action>
	</item>
	<item label="Shutdown">
		<action name="Execute">
			<prompt>Are you sure you want to shutdown?</prompt>
			<command>systemctl poweroff</command>
		</action>
	</item>
</menu>


<menu id="root-menu" label="Openbox 3">
	<separator label="Applications" />
	<menu id="apps-graphics-menu"/>
	<menu id="apps-multimedia-menu"/>
	<menu id="apps-net-menu"/>
	<menu id="apps-office-menu"/>
	<menu id="apps-system-menu"/>
	<separator label="Control" />
	<menu id="pipe-moc-menu" />
	<menu id="pipe-alsa-menu" />
	<separator label="System" />
	<menu id="system-administration-menu"/>
	<menu id="system-openbox-menu"/>
	<separator />
	<menu id="system-session-menu"/>
</menu>

</openbox_menu>
