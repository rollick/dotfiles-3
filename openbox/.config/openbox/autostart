#
# These things are run when an Openbox X Session is started.
#

# Load keyboard tweaks
if which xmodmap >/dev/null 2>&1; then
	if [[ -e ${HOME}/.Xmodmap ]]; then
		xmodmap "${HOME}/.Xmodmap" &
	fi
fi

# Enable disable numlock
if which numlockx >/dev/null 2>&1; then
	if [[ -e "${XDG_DATA_HOME:-${HOME}/.local/share}/numlock_on" ]];then
		numlockx on &
	else
		numlockx off &
	fi
fi

# Set Wallpaper
if which feh >/dev/null 2>&1; then
	if [[ -e "${HOME}/.fehbg" ]];then
		. "${HOME}/.fehbg" &
	fi
fi

# Load URxvtd
if which urxvtd >/dev/null 2>&1; then
	urxvtd -q -o -f &
fi

# Enable Edgescroll in touchpad
if which synclient >/dev/null 2>&1; then
	synclient HorizEdgeScroll=1 &
	synclient VertEdgeScroll=1 &
fi
