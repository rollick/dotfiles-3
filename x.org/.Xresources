! Rofi
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
rofi.color-enabled: true
rofi.color-window: #444444, #888888, #888888
rofi.color-normal: #444444, #dcdcdc, #444444, #5294e2, #f9f9f9
rofi.color-active: #444444, #5294e2, #444444, #5294e2, #f9f9f9
rofi.color-urgent: #d64937, #444444, #d64937, #5294e2, #f9f9f9
rofi.font: Droid Sans 10
rofi.hide-scrollbar: true
rofi.kb-cancel: Escape,Menu
rofi.terminal: i3-sensible-terminal

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Xft
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! URxvt
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! General settings
URxvt.perl-ext-common: default,clipboard,matcher,url-select,vtwheel

! Cursor settings
URxvt.cursorBlink: true
URxvt.cursorUnderline: true

! Font settings
URxvt.font: xft:Droid Sans Mono:size=10,xft:Symbola:size=9

! Scrollbar settings
URxvt.scrollBar: false

! Scrollback buffer in secondary screen
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

! Make URLs clickable
URxvt.url-launcher: chromium
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg8
URxvt.url-select.launcher: chromium
URxvt.url-select.underline: true

! Keybindings
URxvt.keysym.C-S-c: perl:clipboard:copy
URxvt.keysym.C-S-v: perl:clipboard:paste
URxvt.keysym.M-u: perl:url-select:select_next

! Tango colortheme
URxvt.background: #000000
URxvt.foreground: #ffffff
URxvt.color0: #2e2e34343636
