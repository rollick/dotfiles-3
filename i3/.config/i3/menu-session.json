{
	"i3": {
		"reconfigure": "i3-msg reload",
		"restart": "i3-msg restart"
	},
	"lock": "i3lock_wrapper --dpms",
	"logout": "i3-msg exit",

	"hibernate": {
		"with lock": "i3lock_wrapper --dpms && systemctl hibernate",
		"without lock": "systemctl hibernate"
	},

	"suspend": {
		"with lock": "i3lock_wrapper --dpms && systemctl suspend",
		"without lock": "systemctl suspend"
	},

	"reboot": "systemctl reboot",
	"shutdown": "systemctl poweroff"
}
