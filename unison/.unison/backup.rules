#################
# Temporary files
#################
ignore = Name *.bak
ignore = Name *.crdownload
ignore = Name *.o
ignore = Name *.pyc
ignore = Name *.swp
ignore = Name *.tmp
ignore = Name *.~
ignore = Name *~
ignore = Name .~lock.*.*#
ignore = Name __pycache__


#######################
# Applications - Caches
#######################
path = .cache

ignore = Path .cache/*

ignorenot = Path .cache/asp
ignorenot = Path .cache/pacaur
ignorenot = Path .cache/pip


##############################
# Applications - Configuration
##############################
path = .PlayOnLinux
path = .config
path = .gnupg
path = .ipython
path = .mozilla
path = .nestopia
path = .pylint
path = .quodlibet
path = .snes9x
path = .ssh
path = .unison
path = .wine
path = .xchat2

path = .MP3Diags.dat
path = .MP3Diags.ini
path = .Xdefaults
path = .Xmodmap
path = .Xresources
path = .easyMP3Gain
path = .gist-vim
path = .hunspell_de_DE
path = .hunspell_en_US
path = .hushlogin
path = .profile
path = .tmux.conf
path = .xinitrc
path = .xsession
path = .zlogin
path = .zlogout
path = .zprofile
path = .zshenv
path = .zshrc

ignore = Path .config/MP3Diags/*
ignore = Path .config/QtProject.conf
ignore = Path .config/chromium/Profile*/File System
ignore = Path .config/chromium/Singleton*
ignore = Path .config/cmus/*
ignore = Path .config/gtk-*/gtkfilechooser.ini
ignore = Path .config/mpv/watch_later
ignore = Path .config/quodlibet/{accels,control,current,dumps,faultdump,queue,songs}
ignore = Path .config/transmission
ignore = Path .moc/*
ignore = Path .mozilla/firefox/*/lock
ignore = Path .unison/*
ignore = Path .{config/,}gnupg/S.{dirmngr,gpg-agent}

ignorenot = Path .config/MP3Diags/session.ini
ignorenot = Path .config/cmus/{*.theme,rc}
ignorenot = Path .config/transmission/{blocklists,settings.json}
ignorenot = Path .moc/{config,themes}
ignorenot = Path .unison/*.{include,prf,rules,settings}


################################
# Applications - Persistent data
################################
path = .icons
path = .local
path = .themes

ignore = Path .local/share/Trash
ignore = Path .local/share/gvfs-metadata
ignore = Path .local/share/icc
ignore = Path .local/share/numlock_{on,off}
ignore = Path .local/share/nvim/shada
ignore = Path .local/share/recently-used.xbel
ignore = Path .local/share/xorg
ignore = Path .local/share/zathura/*

ignorenot = Path .local/share/zathura/bookmarks


###############
# Personal Data
###############
path = Desktop
path = Documents
path = Music
path = Pictures
path = Public
path = Software
path = Templates
path = Videos

ignore = Path Documents/Code/Local/*/*/.egg-info
ignore = Path Documents/Code/Local/*/{.cache,.eggs,.tox,build,dist,MANIFEST}
ignore = Path Documents/Code/Local/pkgbuilds/{*,*/*}/{pkg,src,*.tar.*}
ignore = Path Public/*

ignorenot = Path Public/favicon.ico
