<menu id="system-openbox-menu" label="Openbox">
	<item label="Edit autostart">
		<action name="Execute">
			<command>termopen vim ~/.config/openbox/autostart</command>
		</action>
	</item>
	<item label="Edit Openbox configuration">
		<action name="Execute">
			<command>termopen vim ~/.config/openbox/rc.xml</command>
		</action>
	</item>
	<item label="Edit Openbox environment">
		<action name="Execute">
			<command>termopen vim ~/.config/openbox/environment</command>
		</action>
	</item>
	<item label="Edit Openbox menu">
		<action name="Execute">
			<command>termopen vim ~/.config/openbox/menu.xml</command>
		</action>
	</item>
	<separator />
	<item label="Reconfigure Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to reconfigure Openbox?</prompt>
			<command>openbox --reconfigure</command>
		</action>
	</item>
	<item label="Restart Openbox">
		<action name="Execute">
			<prompt>Are you sure you want to restart Openbox?</prompt>
			<command>openbox --restart</command>
		</action>
	</item>
</menu>

<menu id="system-session-menu" label="Session">
	<item label="Lock screen">
		<action name="Execute">
			<prompt>Are you sure you want to lock the screen?</prompt>
			<command>light-locker-command --lock</command>
		</action>
	</item>
	<item label="Log Out">
		<action name="Exit">
			<prompt>yes</prompt>
		</action>
	</item>
	<separator />
	<item label="Hibernate">
		<action name="Execute">
			<prompt>Are you sure you want to hibernate?</prompt>
			<command>systemctl hibernate</command>
		</action>
	</item>
	<item label="Suspend">
		<action name="Execute">
			<prompt>Are you sure you want to suspend?</prompt>
			<command>systemctl suspend</command>
		</action>
	</item>
	<separator />
	<item label="Reboot">
		<action name="Execute">
			<prompt>Are you sure you want to reboot?</prompt>
			<command>systemctl reboot</command>
		</action>
	</item>
	<item label="Shutdown">
		<action name="Execute">
			<prompt>Are you sure you want to shutdown?</prompt>
			<command>systemctl poweroff</command>
		</action>
	</item>
</menu>

<menu id="system-administration-menu" label="Administration">
	<item label="Printers">
		<action name="Execute">
			<command>firefox http://localhost:631/</command>
			<startupnotify>
				<enabled>no</enabled>
				<icon>cups</icon>
			</startupnotify>
		</action>
	</item>
	<item label="Notifications">
		<action name="Execute">
			<command>xfce4-notifyd-config</command>
		</action>
	</item>
	<menu id="system-openbox-menu"/>
	<menu id="pipe-alsa-menu" />
</menu>


<menu id="root-menu" label="Openbox 3">
	<separator label="Applications" />
	<menu id="apps-devel-menu"/>
	<menu id="apps-games-menu"/>
	<menu id="apps-graphics-menu"/>
	<menu id="apps-multimedia-menu"/>
	<menu id="apps-net-menu"/>
	<menu id="apps-office-menu"/>
	<menu id="apps-system-menu"/>
	<separator label="Control" />
	<menu id="pipe-moc-menu" />
	<menu id="pipe-alsa-menu" />
	<separator label="System" />
	<menu id="system-administration-menu"/>
	<separator />
	<menu id="system-session-menu"/>
</menu>

</openbox_menu>
