[alias]
	br = branch
	cdpull = "!cdpull() { cd $1 2>/dev/null && (echo :: ${1##*/}; shift; git pull $@; echo);}; cdpull"
	ci = commit
	cia = commit --all
	co = checkout
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	rba = rebase --abort
	rbc = rebase --continue
	stat = status
