#!/bin/sh
#
# These things are run when an Openbox X Session is started.
# You may place a similar script in $HOME/.config/openbox/autostart
# to run user-specific things.
#

# Set wallpaper
if which feh >/dev/null 2>&1; then
	sh ~/.fehbg &
fi

# Start composite manager
if which xcompmgr >/dev/null 2>&1; then
	xcompmgr &
fi

# Start dzen and populate it
if which i3status >/dev/null 2>&1 && which dzen2 >/dev/null 2>&1; then
    sh -c 'sleep 1; i3status |dzen2 -xs 1 -dock -e "button2=;"' &
fi

# Start thunar as a daemon
if which thunar >/dev/null 2>&1; then
	thunar --daemon &
fi
# vim: set ft=sh et:
